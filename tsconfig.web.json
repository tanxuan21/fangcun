{
    "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
    "include": [
        "src/renderer/src/env.d.ts",
        "src/renderer/src/**/*",
        "src/renderer/src/**/*.tsx",
        "src/preload/*.d.ts",
        "src/renderer/**/*.svg"
    ],
    "compilerOptions": {
        "moduleResolution": "bundler",
        "composite": true,
        "jsx": "react-jsx",
        // "typeRoots": [
        //     "./node_modules/@types",
        //     "./types" // 将自定义的 type 根目录加入到 tsconfig.json 的 typeRoots 中
        // ],
        "rootDir": ".", // 抛弃 baseUrl 配置
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "paths": {
            "@renderer/*": [
                "./src/renderer/src/*"
            ]
        }
    }
}