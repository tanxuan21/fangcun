{
    "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
    "include": [
        "electron.vite.config.*",
        "src/main/**/*",
        "src/preload/**/*",
        "types/**/*"
    ],
    "compilerOptions": {
        "composite": true,
        /* 覆盖继承配置（关键） */
        "module": "ESNext",
        "moduleResolution": "bundler",
        /* 放宽规则（你已有） */
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        /* 正确的类型声明 */
        "types": [
            "node",
            "electron"
        ],
        /* 自定义类型 */
        // "typeRoots": [
        //     "./node_modules/@types",
        //     "./node_modules/electron",
        //     "./types"
        // ]
    }
}